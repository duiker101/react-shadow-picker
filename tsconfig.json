{
	"compilerOptions": {
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"declaration": true,
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "example"]
}
